@using ShopWebApp.Web.ViewModels.Products
@model EditProductInputModel

<h1 style="text-align: center;">Update</h1>

<h4 style="text-align: center;">Update Product Form</h4>

<hr />

<div class="row" style="justify-content: center;">
    <div class="col-md-4">
        <form asp-controller="Products" asp-action="Update" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="text-align: center; font: bold;">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
                 <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
                <label asp-for="ImageURL" class="control-label"></label>
                <input asp-for="ImageURL" class="form-control" />
                <span asp-validation-for="ImageURL" class="text-danger"></span>
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>  
                <label asp-for="Stock" class="control-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
            <div class="form-group" style="text-align: center;">
                <input type="hidden" asp-for="Id" />
                <input type="submit" style="background-color: orange;" value="Update Product" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
